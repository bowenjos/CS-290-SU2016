CREATE DATABASE student;
CREATE DATABASE test;
CREATE USER student;
GRANT all ON student.* TO 'student'@'localhost';
GRANT all ON test.* TO 'test'@'localhost';
SET PASSWO
R;
SET PASSWO R;
SET PASSWORD FOR 'student'@'localhost' = PASSWORD('default');
SET PASSWORD FOR 'test'@'localhost' = PASSWORD('default');
show databases;
use test
