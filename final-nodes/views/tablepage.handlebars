<h1>Your Workout</h1>

<form>
  <fieldset>
    <Legend>Enter a Workout Item</legend>
    <label for="name"></label>
    <input type="text" name="name" id="name"><br>
    <label for="reps"></label>
    <input type="number" name="reps" id="reps"><br>
    <label for="weight"></label>
    <input type="number" name="weight" id="weight"><br>
    <label for="date"></label>
    <input type="date" name="date" id="date">
    <label for="lbs"></label><br>
    <input type="radio" name="bool" value="0" checked> 0: kgs<br>
    <input type="radio" name="bool" value="1"> 1: lbs<br>
    <input type="submit" id="workoutSubmit">
  </fieldset>
</form>


<table>
  <tr>
    <th>Name</th>
    <th>Reps</th>
    <th>Weight</th>
    <th>Date</th>
    <th>Lbs</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  {{#each dataList}}
  <tr>
    <td>{{this.name}}</td>
    <td>{{this.reps}}</td>
    <td>{{this.weight}}</td>
    <td>{{this.date}}</td>
    <td>{{this.lbs}}</td>
    <td><button type="button">Edit</button><td>
    <td><button type="button">Delete</button><td>
  </tr>
  {{/each}}
</table>
