<h1>Your Workout</h1>

<form>
  <fieldset>
    <Legend>Enter a Workout Item</legend>
    <label for="name"></label>
    Name: <input type="text" name="name" id="name"><br>
    <label for="reps"></label>
    Reps: <input type="number" name="reps" id="reps"><br>
    <label for="weight"></label>
    Weight: <input type="number" name="weight" id="weight"><br>
    <label for="date"></label>
    Date: <input type="date" name="date" id="date"><br>
    <label for="lbs"></label>
    Lbs: <br>
    <input type="radio" name="lbs" value="0" checked> 0: kgs<br>
    <input type="radio" name="lbs" value="1"> 1: lbs<br>
    <input type="submit" id="workoutSubmit">
    <input type="hidden" id="updateSubmit">
  </fieldset>
</form>


<table>
  <tr>
    <th>Name</th>
    <th>Reps</th>
    <th>Weight</th>
    <th>Date</th>
    <th>Lbs</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  {{#each dataList}}
  <tr>
    <td>{{this.name}}</td>
    <td>{{this.reps}}</td>
    <td>{{this.weight}}</td>
    <td>{{this.date}}</td>
    <td>{{this.lbs}}</td>
    <td>
      <form action="edit-table" method="post">
       <input type="hidden" name="id" value="{{this.id}}">
       <input type="submit" value="Edit">
      </form>
    </td>
    <td><button type="button" onclick="deleteClick({{this.id}})">Delete</button></td>
  </tr>
  {{/each}}
</table>
